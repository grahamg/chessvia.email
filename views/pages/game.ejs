<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>chessvia.email</title>
    <link rel="stylesheet" href="/css/chessboard-1.0.0.min.css">
    <style>
        #board {
            width: 400px;
        }

        #status {
            width: 400px;
            margin-top: 10px;
        }

        #moves {
            width: 415px;
            height: 500px;
            overflow-y: auto;
            display: block;
        }

        #player-vs-player ul {
            width: 400px;
            margin-top: 10px;
            list-style:none;
            padding:0;
            margin:0;
        }

        hr.left-align {
            width: 400px;
            margin-left: 0;
            margin-right: auto;
        }

        table {
            border-collapse: collapse;
            width: 400px;
        }

        th, td {
            text-align: left;
            padding: 8px;
            border: 1px solid black;
        }

        tr:nth-child(odd) {
            background-color: #000000;
            color: #FFFFFF;
        }
    </style>
</head>
<body>
    <div id="board"></div>
    <hr class="left-align">
    <div id="player-vs-player">
        <ul>
            <li>Black: <%= game.blackPlayerName %> <i>(<%= game.blackPlayerEmail %>)</i></li>
            <li>vs.</li>
            <li>White: <%= game.whitePlayerName %> <i>(<%= game.whitePlayerEmail %>)</i></li>
        </ul>
    </div>
    <hr class="left-align">
    <div id="status"></div>
    <hr class="left-align">
    <div id="moves">
        <% if (movesList.length > 0) { %>
            <table>
                <tr>
                  <th>Player</th>
                  <th>Move</th>
                  <th>Timestamp</th>
                </tr>
                <% for (var i = 0; i < movesList.length; i++) { %>
                    <tr>
                        <% if (movesList[i].player === 'w') { %>
                            <td><%= game.whitePlayerName %></td>
                        <% } else if (movesList[i].player === 'b') { %>
                            <td><%= game.blackPlayerName %></td>
                        <% } %>
                        <td><%= movesList[i].move %></td>
                        <td><%= movesList[i].timestamp %> Central</td>
                    </tr>
                <% } %>
              </table>
        <% } %>
    </div>
    <script src="/js/chess.min.js"></script>
    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/chessboard-1.0.0.min.js"></script>
    <script src="/game.js"></script>
</body>
</html>